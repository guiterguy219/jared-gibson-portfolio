---
import NavbarComponent from "@/components/custom-ui/navbar";
import Layout from "@/layouts/Layout.astro";

const { pathname } = Astro.url;
const currentPath = pathname.slice(1);
const currentPathSegments = currentPath.split("/");
---

<Layout>
  <div
    class="max-w-6xl w-full px-4 sm:px-8 pt-8 pb-12 flex flex-col items-center gap-8"
  >
    <div class="flex flex-col sm:flex-row items-center gap-8">
      <img
        src="https://content.gibsonops.com/jared/portrait_angle_cropped_md.webp"
        alt="Jared Gibson"
        class="w-48 rounded-full aspect-square object-cover"
      />
      <div class="flex flex-col items-center gap-2">
        <h1 class="text-3xl font-bold">Jared Gibson</h1>
        <p class="text-lg">Full Stack Developer</p>
      </div>
    </div>
    <NavbarComponent
      variant="default"
      links={[
        { href: "/", label: "Home", active: currentPath === "" },
        {
          href: "/about-me",
          label: "About Me",
          active: currentPath === "about-me",
        },
        {
          href: "/projects",
          label: "Projects",
          active: currentPath === "projects",
        },
        {
          href: "/blog",
          label: "Blog",
          active: currentPathSegments[0] === "blog",
        },
      ]}
    />
    <slot />
  </div>
</Layout>
